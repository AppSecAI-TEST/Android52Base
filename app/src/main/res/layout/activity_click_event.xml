<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhaoliang.com.android52base.activity.day01.clickevent.ClickEventActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="第一个种点击事件的写法" />

    <Button
        android:id="@+id/btn_click_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第二种点击事件的写法" />

    <Button
        android:id="@+id/btn_click_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第三种点击事件的写法" />

    <Button
        android:id="@+id/btn_click_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第四种点击事件的写法" />
</LinearLayout>
